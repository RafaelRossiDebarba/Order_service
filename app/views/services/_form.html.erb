<%= form_with(model: service) do |form| %>
  <% if service.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
        <% service.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Descrição", style: "display: block", class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div>
    <%= form.label "Preço", style: "display: block", class: "form-label" %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div>
    <%= form.label "Cliente", style: "display: block" %>
    <% if @clients != nil %>
      <%= collection_select(:service, :client_id, @clients, :id, :name, prompt: true) %>
    <% end %>
  </div>

  <div>
    <%= form.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
